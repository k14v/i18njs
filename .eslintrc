{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": ["import"],
  "rules": {
    "semi": [2, "always"],
    "comma-dangle": ["error", "always-multiline"],
    "import/newline-after-import": ["error", { "count": 2 }],
    "no-multiple-empty-lines": "off"
  }
}
